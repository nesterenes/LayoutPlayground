<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oneupapplications.layoutplayground" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.oneupapplications.layoutplayground.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.oneupapplications.layoutplayground.CategoryDetailActivity"
            android:label="@string/title_category_detail"
            android:parentActivityName="com.oneupapplications.layoutplayground.CategoryListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.oneupapplications.layoutplayground.CategoryListActivity" />
        </activity>
        <activity
            android:name="com.oneupapplications.layoutplayground.ArtDetailActivity"
            android:label="@string/title_category_detail"
            android:parentActivityName="com.oneupapplications.layoutplayground.ArtDetailActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.oneupapplications.layoutplayground.ArtDetailActivity" />
        </activity>
        <activity
            android:name=".TestHandler"
            android:label="@string/title_activity_test_handler" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>
